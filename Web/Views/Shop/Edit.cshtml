@using Data
@model IEnumerable<Data.Equipment>

@{
    ViewData["Title"] = "Shop";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-center position-relative">
        <h1 class="display-4 mb-3">@ViewData["Title"]</h1>
        <div class="position-absolute" style="right: 0" >
            <a class="btn btn-primary" asp-area="" asp-controller="Shop" asp-action="Index">Save</a>
            <a class="btn btn-primary" style="color: #ffffff; cursor: pointer;" data-toggle="modal" data-target="#goBackVerificationModal">Back</a>
        </div>
    </div>
    <div class="modal fade" id="goBackVerificationModal" tabindex="-1" role="dialog" aria-labelledby="goBackVerificationModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Are you sure you want to go back without saving?
          </div>
          <div class="modal-footer">
            <a type="button" class="btn btn-primary" asp-area="" asp-controller="Shop" asp-action="Index">Yes</a>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Return</button>
          </div>
        </div>
      </div>
    </div>
    <table class="table edit-equipment">
        <colgroup>
            <col span="1" style="width: 26%;">
            <col span="1" style="width: 18%;">
            <col span="1" style="width: 12%;">
            <col span="1" style="width: 12%;">
            <col span="1" style="width: 12%;">
            <col span="1" style="width: 12%;">
            <col span="1" style="width: 8%;">
        </colgroup>
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Cost)</th>
            <th>@Html.DisplayNameFor(model => model.Strength)</th>
            <th>@Html.DisplayNameFor(model => model.Intelligence)</th>
            <th>@Html.DisplayNameFor(model => model.Agility)</th>
            <th>Remove</th>
        </tr>
        </thead>
        <tbody>

        @foreach (var item in Model)
        {
            <tr id="Row-@Html.DisplayFor(modelItem => item.Name)">
                <td>
                    <input type="text" value="@Html.DisplayFor(modelItem => item.Name)">
                </td>
                <td>
                    <select class="form-control browser-default custom-select" id="inputCategory">
                        @foreach (var category in Enum.GetValues(typeof(Category)))
                        {
                            @if (category.Equals(item.Category))
                            {
                                <option selected value="@category.ToString()">@category.ToString()</option>
                            }
                            else
                            {
                                <option value="@category.ToString()">@category.ToString()</option>
                            }
                        }
                    </select>
                </td>
                <td>
                    <input type="number" min="0" value="@Html.DisplayFor(modelItem => item.Cost)">
                </td>
                <td>
                    <input type="number" value="@Html.DisplayFor(modelItem => item.Strength)">
                </td>
                <td>
                    <input type="number" value="@Html.DisplayFor(modelItem => item.Intelligence)">
                </td>
                <td>
                    <input type="number" value="@Html.DisplayFor(modelItem => item.Agility)">
                </td>
                <td>
                    <input type="checkbox" name="">
                </td>
            </tr>
        }
        </tbody>
    </table>
    <button class="btn btn-primary w-100">Add +</button>
</div>
