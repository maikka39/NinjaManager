@model List<Data.Equipment>
@{
    ViewData["Title"] = "Shop";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-center position-relative">
        <h1 class="display-4 mb-3">@ViewData["Title"]</h1>
        <a class="btn btn-primary position-absolute" style="right: 0" asp-area="" asp-controller="Shop" asp-action="Edit">Edit</a>
    </div>
    <div class="card-deck">
        @foreach (var equipment in Model)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@equipment.Name <i class="fas fa-edit" onclick="alert(1)"></i></h5>
                    <h6 class="card-subtitle mb-2 text-muted">@equipment.Category</h6>
                    <ul class="card-text">
                        <li>Strength: @equipment.Strength</li>
                        <li>Intelligence: @equipment.Intelligence</li>
                        <li>Agility: @equipment.Agility</li>
                    </ul>
                    <a href="#" class="btn btn-primary">Buy $@equipment.Cost</a>
                </div>
            </div>
        }
    </div>
</div>
