@model IEnumerable<Data.Ninja>
@{
    ViewData["Title"] = "Ninjas";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <button type="button" class="btn btn-primary m-2">Create</button>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gold)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gold)
                </td>
                @* <td> *@
                @*     $1$ @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | #1# *@
                @*     $1$ @Html.ActionLink("Details", "Details", new { id = item.Id }) | #1# *@
                @*     $1$ @Html.ActionLink("Delete", "Delete", new { id = item.Id }) #1# *@
                @* </td> *@
                <td>
                    <button type="button" class="btn btn-secondary">Details</button>
                    <button type="button" class="btn btn-secondary">Edit</button>
                    <button type="button" class="btn btn-secondary">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>
