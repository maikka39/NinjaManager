@model IEnumerable<Data.Ninja>
@{
    ViewData["Title"] = "Ninjas";
}

<div class="text-center">
    <div class="d-flex align-items-center justify-content-center position-relative">
        <h1 class="display-4 mb-3">@ViewData["Title"]</h1>
        <a class="btn btn-primary position-absolute" style="right: 0" asp-area="" asp-controller="Ninja" asp-action="Create">Create</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gold)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ninja in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => ninja.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ninja.Gold)
                </td>
                <td>
                    <a class="btn btn-secondary" asp-area="" asp-controller="Ninja" asp-action="Details" asp-route-id="@ninja.Id">Details</a>
                    <a class="btn btn-secondary" asp-area="" asp-controller="Ninja" asp-action="Edit" asp-route-id="@ninja.Id">Edit</a>
                    <a class="btn btn-secondary" asp-area="" asp-controller="Ninja" asp-action="Delete" asp-route-id="@ninja.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>
