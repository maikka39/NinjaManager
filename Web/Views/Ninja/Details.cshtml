                <p class="card-text">@Model.Sword.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item py-2">
                    <span class="font-weight-bold">Strenght:</span> @Model.Sword.Strength
                </li>
                <li class="list-group-item py-2">
                    <span class="font-weight-bold">Agility:</span> @Model.Sword.Agility
                </li>
                <li class="list-group-item py-2">
                    <span class="font-weight-bold">Intelligence:</span> @Model.Sword.Intelligence
                </li>
            </ul>
            <div class="card-body py-3">
                <a class="card-link" asp-area="" asp-controller="Ninja" asp-action="SellEquipment" asp-route-ninjaId="@Model.Id" asp-route-equipmentId="@Model.Sword.Id">Sell equipment</a>
            </div>
        }
        else
        {
            <div class="card-body">
                <h5 class="card-title">Sword</h5>
                <p class="card-text">Make your ninja better and buy him some equipment!</p>
            </div>
            <div class="card-body d-flex align-items-end">
                <a class="btn btn-primary" asp-area="" asp-controller="Shop" asp-action="Index" asp-route-ninjaId="@Model.Id">Buy sword</a>
            </div>
        }
    </div>
</div>
<div class="col">
    <div class="card mb-4">
        <img src="@Model.SkinUrl" class="my-1 img-size" style="width: 100%; object-fit: contain; height: 1000%; padding: 3rem;" alt="Skin">
    </div>
    <div class="card">
        <h5 class="card-header text-center">Stats of @Model.Name</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <span class="font-weight-bold">Wallet:</span> @Model.Gold/@Model.GetTotalGold()
            </li>
            <li class="list-group-item">
                <span class="font-weight-bold">Gear value:</span> @Model.GetGearValue()
            </li>
            <li class="list-group-item">
                <span class="font-weight-bold">Strenght:</span> @Model.GetTotalStrength()
            </li>
            <li class="list-group-item">
                <span class="font-weight-bold">Agility:</span> @Model.GetTotalAgility()
            </li>
            <li class="list-group-item">
                <span class="font-weight-bold">Intelligence:</span> @Model.GetTotalIntelligence()
            </li>
        </ul>
    </div>
</div>
